<footer>
  <small>
    <div class="btn-group">
      <% if current_user %>
        Signed in as <%= current_user.full_name %> (<%= link_to "Log out", new_session_path, method: :delete %>)
      <% else %>
        <%= link_to "Log In", new_session_path, :class => 'btn btn-large btn-primary'%>  <%= link_to "Sign Up", new_user_path, :class => 'btn btn-large btn-primary' %>
      <% end %>
      <% if current_user && current_user.admin? %>
        <%= link_to "Admin", admin_users_path, :class => 'btn btn-large btn-primary' %>
      <% end %>
      <% if current_user && current_user.admin? && session[:user_id] != session[:showing]%>
        <%= link_to "Back to profile", admin_user_back_to_path(current_user), :class => 'btn btn-large btn-primary' %>
      <% end %>
    </div>
  </small>
</footer>
